@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            Insert Service/Product
            </a>

        </div>
    </div>

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Interested Product/Service
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Intereste_Product_Service
                </td>
                <td width="30%">
                    @obj.Quantity
                </td>
                <td width="20%">
                    @obj.Unit
                </td>
                <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                   </div>

                  
                </td>
            </tr>
        }
    </tbody>

</table>
